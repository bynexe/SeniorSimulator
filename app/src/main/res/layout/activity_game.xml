<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DB075"
    tools:context=".ActivityGame">

    <View
        android:id="@+id/ViewDONTUSE"
        android:layout_width="124dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDONTUSE2"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDONTUSE4"
        android:layout_width="199dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewDONTUSE" />

    <ProgressBar
        android:id="@+id/barCoherence"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="108dp"
        android:layout_height="13dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/progressbar_coherence"
        app:layout_constraintEnd_toEndOf="@+id/ViewDONTUSE"
        app:layout_constraintStart_toStartOf="@+id/viewDONTUSE4"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="123dp"
        android:layout_height="12dp"
        android:layout_marginTop="5dp"
        android:text="М О Я   К О М А Н Д А"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/viewDONTUSE4"
        app:layout_constraintStart_toStartOf="@+id/viewDONTUSE4"
        app:layout_constraintTop_toTopOf="@+id/viewDONTUSE4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="СЛАЖЕННОСТЬ"
        android:textColor="#666666"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDONTUSE4"
        app:layout_constraintEnd_toEndOf="@+id/viewDONTUSE4"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/totalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:text="Баланс"
        android:textColor="#666666"
        app:layout_constraintBottom_toBottomOf="@+id/ViewDONTUSE"
        app:layout_constraintStart_toStartOf="@+id/ViewDONTUSE"
        app:layout_constraintTop_toTopOf="@+id/ViewDONTUSE"
        app:layout_constraintVertical_bias="0.357" />

    <TextView
        android:id="@+id/money"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:text="250$"
        android:textColor="#1D7821"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/totalMoney"
        app:layout_constraintEnd_toEndOf="@+id/ViewDONTUSE"
        app:layout_constraintTop_toTopOf="@+id/totalMoney"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ViewDONTUSE,totalMoney,money" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#EAEAEA"
        android:text="30 ДНЕЙ"
        android:textColor="#454444"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDONTUSE2"
        app:layout_constraintEnd_toEndOf="@+id/viewDONTUSE2"
        app:layout_constraintStart_toStartOf="@+id/viewDONTUSE2"
        app:layout_constraintTop_toTopOf="@+id/viewDONTUSE2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDONTUSE4"
        tools:layout_editor_absoluteX="178dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/job5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/job3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/job1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/plus" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buyWorkers"

        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:background="@drawable/rounded"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDONTUSE4">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/exitBuyMenu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="32dp"
                    android:text="Нанять сотрудника"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#4B9460"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWorker1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/worker1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameOfWorker1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Имя" />

                        <TextView
                            android:id="@+id/pointsOfWorker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="П-1 Д-1 М-1" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/plus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#4B9460"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/worker2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameOfWorker2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Имя" />

                        <TextView
                            android:id="@+id/pointsOfWorker2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="П-1 Д-1 М-1" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textEnd" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exitBuyMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="НАЗАД"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/EView"
        android:layout_width="360dp"
        android:layout_height="280dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:id="@+id/ETitle"
            android:layout_width="358dp"
            android:layout_height="35dp"
            android:text="Text View!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="-30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:text="TextView"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/EConfirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-50dp"
            android:layout_marginTop="30dp"
            android:text="OK" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/statWorkers"

        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:background="@drawable/rounded"
        android:gravity="top"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDONTUSE4">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/code" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="НАЗАД" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>